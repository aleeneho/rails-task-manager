<div class="container">

  <%= link_to 'Edit list', task_edit_path(@task) %>

  <p><%= @task.details %></p>

  <P><%= link_to @task.title %></P>

  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" <%= @task.completed && "checked" %> id="flexCheckDefault">
      <% if @task.completed %>
      <%= "This task completed" %>
      <% else %>
      <%= "This task not yet completed" %>
      <% end %>
  </div>

  <br>

  <%= link_to 'Back to list', tasks_path %>

</div>
